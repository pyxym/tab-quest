{
  "name": "tabai",
  "displayName": "TabAI - AI-Powered Tab Assistant",
  "version": "0.0.1",
  "description": "브라우저 탭 관리",
  "author": "TabAI",
  "license": "MIT",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "package": "wxt package"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "5.3.3",
    "wxt": "^0.20.7"
  },
  "manifest": {
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "tabGroups",
      "windows",
      "alarms"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
}

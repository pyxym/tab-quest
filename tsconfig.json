{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "~*": ["./*"]
    },
    "baseUrl": ".",
    "types": ["vite/client", "chrome", "wxt/browser"]
  },
  "exclude": ["node_modules", ".output", "src/test/**/*"],
  "include": ["./**/*.ts", "./**/*.tsx"]
}